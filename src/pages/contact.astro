---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const contactLinks = [
  { href: 'mailto:k.kaushik25@gmail.com', label: 'Email', value: 'k.kaushik25@gmail.com', icon: 'mail' },
  { href: 'https://linkedin.com/in/kaushik-2523', label: 'LinkedIn', value: 'kaushik-2523', icon: 'linkedin' },
  { href: 'https://github.com/krishnakaushik25', label: 'GitHub', value: 'krishnakaushik25', icon: 'github' },
  { href: 'https://twitter.com/KrishnaWanders', label: 'Twitter', value: '@KrishnaWanders', icon: 'twitter' },
];

const openTo = [
  'Full-time AI/ML engineering roles',
  'Consulting on LLM/RAG projects',
  'Technical co-founder opportunities',
  'Open source collaboration',
];
---

<BaseLayout title="Contact" description="Get in touch for AI/ML collaboration, consulting opportunities, or just to connect.">
  <Navbar slot="header" />

  <section class="container mx-auto px-4 py-12 md:py-20 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-16 reveal">
      <span class="inline-block px-3 py-1 text-xs font-medium bg-cyan-500/10 text-cyan-400 rounded-full mb-4">
        Get in Touch
      </span>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Contact Me</h1>
      <p class="text-zinc-400 max-w-2xl mx-auto">
        Interested in collaborating on AI/ML projects, consulting opportunities, or just want to connect? I'd love to hear from you.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Contact Form -->
      <div class="card p-6 md:p-8 reveal">
        <h2 class="text-xl font-semibold text-white mb-2">Send a Message</h2>
        <p class="text-sm text-zinc-400 mb-6">
          Fill out the form below and I'll get back to you as soon as possible.
        </p>

        <form action="https://formspree.io/f/xpwzvokr" method="POST" class="space-y-4">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="name" class="text-sm font-medium text-zinc-300 mb-2 block">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700 rounded-lg text-white placeholder-zinc-500 focus:border-cyan-500 focus:outline-none transition-colors"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="text-sm font-medium text-zinc-300 mb-2 block">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700 rounded-lg text-white placeholder-zinc-500 focus:border-cyan-500 focus:outline-none transition-colors"
                placeholder="your@email.com"
              />
            </div>
          </div>
          <div>
            <label for="subject" class="text-sm font-medium text-zinc-300 mb-2 block">Subject</label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700 rounded-lg text-white placeholder-zinc-500 focus:border-cyan-500 focus:outline-none transition-colors"
              placeholder="What's this about?"
            />
          </div>
          <div>
            <label for="message" class="text-sm font-medium text-zinc-300 mb-2 block">Message</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 bg-zinc-800/50 border border-zinc-700 rounded-lg text-white placeholder-zinc-500 focus:border-cyan-500 focus:outline-none transition-colors resize-none"
              placeholder="Your message..."
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full py-3 px-4 bg-gradient-to-r from-cyan-500 to-blue-500 text-white font-medium rounded-lg hover:opacity-90 transition-opacity flex items-center justify-center gap-2"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="22" x2="11" y1="2" y2="13" />
              <polygon points="22 2 15 22 11 13 2 9 22 2" />
            </svg>
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="space-y-6">
        <div class="card p-6 reveal">
          <h2 class="text-xl font-semibold text-white mb-4">Connect Directly</h2>
          <div class="space-y-3">
            {contactLinks.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-4 p-3 rounded-lg hover:bg-zinc-800/50 transition-colors group"
              >
                <div class="p-2 rounded-full bg-zinc-800 group-hover:bg-cyan-500/10 transition-colors">
                  {link.icon === 'mail' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-zinc-400 group-hover:text-cyan-400 transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect width="20" height="16" x="2" y="4" rx="2"/>
                      <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                    </svg>
                  )}
                  {link.icon === 'linkedin' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-zinc-400 group-hover:text-cyan-400 transition-colors" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                    </svg>
                  )}
                  {link.icon === 'github' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-zinc-400 group-hover:text-cyan-400 transition-colors" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  )}
                  {link.icon === 'twitter' && (
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-zinc-400 group-hover:text-cyan-400 transition-colors" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                  )}
                </div>
                <div>
                  <p class="font-medium text-sm text-zinc-200">{link.label}</p>
                  <p class="text-sm text-zinc-500">{link.value}</p>
                </div>
              </a>
            ))}
          </div>
        </div>

        <div class="card p-6 reveal">
          <h2 class="text-xl font-semibold text-white mb-2">Location</h2>
          <div class="flex items-center gap-4 p-3">
            <div class="p-2 rounded-full bg-zinc-800">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-zinc-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div>
              <p class="font-medium text-sm text-zinc-200">Based in India</p>
              <p class="text-sm text-zinc-500">Open to remote opportunities worldwide</p>
            </div>
          </div>
        </div>

        <div class="card p-6 border-cyan-500/30 reveal">
          <h2 class="text-xl font-semibold text-cyan-400 mb-4">Open To</h2>
          <ul class="space-y-2">
            {openTo.map((item) => (
              <li class="text-sm text-zinc-300 flex items-center gap-2">
                <span class="text-cyan-400">&#8226;</span>
                {item}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
