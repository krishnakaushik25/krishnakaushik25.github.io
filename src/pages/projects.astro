---

<BaseLayout title="Projects" description="A collection of 16+ AI/ML projects including RAG systems, LLM applications, and production ML pipelines.">
  <Navbar slot="header" />

  <section class="container mx-auto px-4 py-12 md:py-20 max-w-6xl">
    <!-- Header -->
    <div class="text-center mb-12 reveal">
      <span class="inline-block px-3 py-1 text-xs font-medium bg-cyan-500/10 text-cyan-400 rounded-full mb-4">
        Portfolio
      </span>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Projects</h1>
      <p class="text-zinc-400 max-w-2xl mx-auto">
        A collection of {projects.length}+ projects spanning AI/ML systems, production applications, and experimental research.
      </p>
    </div>

    <!-- Filters -->
    <div class="flex flex-wrap justify-center gap-2 mb-8 reveal" id="filters">
      {categories.map((cat) => (
        <button
          data-category={cat}
          class={`px-4 py-2 text-sm font-medium rounded-lg transition-all filter-btn ${
            cat === 'all' ? 'bg-cyan-500 text-white' : 'bg-zinc-800 text-zinc-400 hover:text-white'
          }`}
        >
          {cat === 'all' ? 'All Projects' : cat.replace('-', ' ')}
        </button>
      ))}
    </div>

    <!-- Results count -->
    <div class="text-center mb-8 text-sm text-zinc-500 reveal">
      Showing <span id="count">{projects.length}</span> of {projects.length} projects
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6" id="projects-grid">
      {projects.sort((a, b) => (b.featured ? 1 : 0) - (a.featured ? 1 : 0)).map((project) => (
        <div class="reveal project-item" data-category={project.category}>
          <ProjectCard {...project} />
        </div>
      ))}
    </div>

    <!-- AI-MiniLabs CTA -->
    <div class="mt-16 text-center p-8 card reveal">
      <h2 class="text-2xl font-bold text-white mb-4">AI-MiniLabs Repository</h2>
      <p class="text-zinc-400 mb-6 max-w-xl mx-auto">
        Explore 16+ cutting-edge AI/ML mini-projects including RAG systems, voice assistants, multimodal AI, and production ML pipelines.
      </p>
      <a
        href="https://github.com/krishnakaushik25/AI-MiniLabs"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-cyan-500 to-blue-500 text-white font-medium rounded-lg hover:opacity-90 transition-opacity"
