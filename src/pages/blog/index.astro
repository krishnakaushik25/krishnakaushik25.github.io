---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

const upcomingTopics = [
  {
    title: 'Building Production RAG Systems',
    description: 'Lessons from enterprise document Q&A deployments',
    tags: ['RAG', 'LangChain', 'Production'],
  },
  {
    title: '16 AI Projects in 6 Months',
    description: 'AI-MiniLabs retrospective and learnings',
    tags: ['AI', 'Projects', 'Learning'],
  },
  {
    title: 'Real-Time Voice Assistants',
    description: 'Architecture deep dive into voice AI systems',
    tags: ['Voice AI', 'Whisper', 'Architecture'],
  },
  {
    title: 'LLM Fine-Tuning in Production',
    description: 'LoRA, QLoRA, and practical deployment strategies',
    tags: ['LLM', 'Fine-tuning', 'MLOps'],
  },
];
---

<BaseLayout title="Blog" description="Technical articles on AI/ML, LLMs, RAG systems, and production ML engineering.">
  <Navbar slot="header" />

  <section class="container mx-auto px-4 py-12 md:py-20 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-16 reveal">
      <span class="inline-block px-3 py-1 text-xs font-medium bg-cyan-500/10 text-cyan-400 rounded-full mb-4">
        Blog
      </span>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Technical Writing</h1>
      <p class="text-zinc-400 max-w-2xl mx-auto">
        Deep dives into AI/ML engineering, production systems, and lessons learned from building LLM-powered applications.
      </p>
    </div>

    <!-- Coming Soon Banner -->
    <div class="relative mb-16 reveal">
      <div class="absolute inset-0 bg-gradient-to-r from-cyan-500/20 via-blue-500/20 to-purple-500/20 blur-3xl rounded-3xl"></div>
      <div class="card p-8 md:p-12 text-center relative border-cyan-500/30">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-cyan-500/10 mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-cyan-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/>
            <path d="m15 5 4 4"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-white mb-4">Coming Soon</h2>
        <p class="text-zinc-400 max-w-md mx-auto mb-6">
          I'm working on technical articles sharing insights from building production AI systems. Follow me to get notified when new posts are published.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href="https://twitter.com/KrishnaWanders"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-cyan-500 to-blue-500 text-white font-medium rounded-lg hover:opacity-90 transition-opacity"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            Follow for Updates
          </a>
          <a
            href="https://linkedin.com/in/kaushik-2523"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 border border-zinc-700 text-zinc-300 font-medium rounded-lg hover:border-cyan-500 hover:text-white transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
            LinkedIn
          </a>
        </div>
      </div>
    </div>

    <!-- Upcoming Topics -->
    <div class="reveal">
      <h2 class="text-2xl font-bold text-white mb-8 text-center">Upcoming Topics</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {upcomingTopics.map((topic) => (
          <div class="card p-5 opacity-75">
            <h3 class="text-lg font-semibold text-white mb-2">{topic.title}</h3>
            <p class="text-sm text-zinc-400 mb-4">{topic.description}</p>
            <div class="flex flex-wrap gap-2">
              {topic.tags.map((tag) => (
                <span class="px-2 py-0.5 text-xs bg-zinc-800 text-zinc-500 rounded-md">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Alternative: Projects -->
    <div class="mt-16 text-center reveal">
      <p class="text-sm text-zinc-500">
        In the meantime, check out my projects on{' '}
        <a
          href="https://github.com/krishnakaushik25"
          target="_blank"
          rel="noopener noreferrer"
          class="text-cyan-400 hover:underline"
        >
          GitHub
        </a>{' '}
        for documented code and README files.
      </p>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
