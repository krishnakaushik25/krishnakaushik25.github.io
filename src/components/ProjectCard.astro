---
interface Props {
  title: string;
  description: string;
  tags: string[];
  github?: string;
  demo?: string;
  featured?: boolean;
}

const { title, description, tags, github, demo, featured = false } = Astro.props;
---

<div class={`card p-5 h-full flex flex-col ${featured ? 'border-cyan-500/30' : ''}`}>
  <div class="flex items-start justify-between mb-3">
    <div class="flex items-center gap-2">
      {featured && (
        <span class="px-2 py-0.5 text-xs font-medium bg-cyan-500/10 text-cyan-400 rounded-full">
          Featured
        </span>
      )}
    </div>
    <div class="flex items-center gap-2">
      {github && (
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="p-1.5 text-zinc-500 hover:text-white transition-colors"
          aria-label="View on GitHub"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      )}
      {demo && (
        <a
          href={demo}
          target="_blank"
          rel="noopener noreferrer"
          class="p-1.5 text-zinc-500 hover:text-cyan-400 transition-colors"
          aria-label="View Demo"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
            <polyline points="15 3 21 3 21 9" />
            <line x1="10" y1="14" x2="21" y2="3" />
          </svg>
        </a>
      )}
    </div>
  </div>

  <h3 class="text-lg font-semibold text-white mb-2 group-hover:text-cyan-400 transition-colors">
    {title}
  </h3>

  <p class="text-sm text-zinc-400 mb-4 flex-1 line-clamp-2">
    {description}
  </p>

  <div class="flex flex-wrap gap-1.5 mt-auto">
    {tags.slice(0, 4).map((tag) => (
      <span class="px-2 py-0.5 text-xs bg-zinc-800 text-zinc-400 rounded-md">
        {tag}
      </span>
    ))}
    {tags.length > 4 && (
      <span class="px-2 py-0.5 text-xs bg-zinc-800 text-zinc-500 rounded-md">
        +{tags.length - 4}
      </span>
    )}
  </div>
</div>
